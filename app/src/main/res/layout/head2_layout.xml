<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="10dp"
    android:background="@color/colorhead">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/head_image"
        android:src="@drawable/zhihu"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="125dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:text="文章详情"
        android:textSize="24sp"
        android:textColor="@color/colorbtn"
        android:layout_marginTop="5dp"
        android:layout_below="@id/head_image"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/heat"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/heat1"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="文章热度"
        android:textSize="24sp"
        android:textColor="@color/colorbtn"/>
    <TextView
        android:id="@+id/heat2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorbtn"
        android:textSize="24sp"
        android:gravity="end"
        android:layout_marginRight="5dp"
        android:hint="number"/>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="评论总数"
                    android:textSize="24sp"
                    android:textColor="@color/colorbtn"
                    android:gravity="end"/>
                <TextView
                    android:id="@+id/num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/colorbtn"
                    android:textSize="24sp"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:hint="number"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/talk"/>
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/L_talk1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="长评"
                    android:textSize="24sp"
                    android:textColor="@color/colorbtn"/>
                <TextView
                    android:id="@+id/L_talk2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorbtn"
                    android:textSize="24sp"
                    android:gravity="end"
                    android:layout_marginRight="5dp"
                    android:hint="number"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/talk"/>
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/S_talk1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="短评"
                    android:textSize="24sp"
                    android:textColor="@color/colorbtn"/>
                <TextView
                    android:id="@+id/S_talk2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorbtn"
                    android:textSize="24sp"
                    android:gravity="end"
                    android:layout_marginRight="5dp"
                    android:hint="number"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>